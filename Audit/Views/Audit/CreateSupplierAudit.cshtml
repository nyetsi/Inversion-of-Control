@model Audit.Web.Models.SupplierAuditViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="pull-left">
        <h1>Create Supplier Audit</h1>
    </div>
</div>

<div class="breadcrumbs">
    <ul>
        <li>
            <a href="@Url.Action("CreateSupplierAudit", "Audit")">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#" class="current">Create Supplier Audit</a>
        </li>
    </ul>
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="box box-bordered">
            <div class="box-title">
                <h3>
                    <i class="fa fa-th-list"></i>Supplier Audit Details
                </h3>
            </div>
            <div class="box-content nopadding">
                @using (Html.BeginForm("CreateSupplierAudit", "Audit", FormMethod.Post, new { @class = "form-horizontal form-bordered" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    @Html.Partial("_Audit", Model)

                    <div class="form-group">
                        @Html.LabelFor(model => model.SuppliersList, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="col-xs-6">
                                @Html.DropDownListFor(model => model.SupplierID, Model.SuppliersList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SuppliersList)
                            </div>
                        </div>
                    </div>

                    <div class="form-actions  col-sm-12">
                        <button type="submit" class="btn pull-right btn-primary">Save Changes</button>
                        <a href="#" class="btn pull-right btn-default">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section validation {
    @Scripts.Render("~/bundles/jqueryval")
}