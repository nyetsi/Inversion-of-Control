@model Audit.Web.Models.AuditItemViewModel

@{
    ViewBag.Title = "AuditItemViewModel";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}

<div id="itemModel" class="modal fade modalforms" style="display:none">
    <div class="modal-dialog">
        <div class="modal-content" style="height:auto;overflow-y:hidden;width:950px">
            <div class="modal-body">
                <div class="form-horizontal">

                    <div class="page-header">
                        <div class="pull-left">
                            <h1>Create Audit Item</h1>
                        </div>
                    </div>

                    <div class="breadcrumbs">
                        <ul>
                            <li>
                                <a href="@Url.Action("CreateAuditItem", "Audit")">Home</a>
                                <i class="fa fa-angle-right"></i>
                            </li>
                            <li>
                                <a href="#" class="current">Create Audit Item</a>
                            </li>
                        </ul>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="box box-bordered">
                                <div class="box-title">
                                    <h3>
                                        <i class="fa fa-th-list"></i>Audit Item Details
                                    </h3>
                                </div>
                                @using (Html.BeginForm("CreateAuditItem", "Audit", FormMethod.Post, new { @class = "form-horizontal form-bordered" }))
                                {
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <div class="col-xs-6">
                                                @Html.TextBoxFor(model => model.Date, "{0:d}", new { @class = "form-control", type = "dated", @Value = "" })
                                                @Html.ValidationMessageFor(model => model.Date)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <div class="col-xs-6">
                                                @Html.TextAreaFor(model => model.Description, new { cols = "5", rows = "3", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Description)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="box-content nopadding">
                                        <div class="form-actions col-sm-offset-10 col-sm-10">
                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                            <a href="#" class="btn btn-default">Cancel</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section validation {
    @Scripts.Render("~/bundles/jqueryval")
}
