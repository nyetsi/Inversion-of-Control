@model Audit.Web.Models.AuditViewModel

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-title">
                <h3>
                    <i class="fa fa-table"></i>
                    Audit Plan Items
                </h3>
                <a class='btn btn-primary pull-right' href="#divModel" data-toggle="modal">Add Items</a>
            </div>
            <div class="box-content nopadding">
                <table id="tblTasks" class="table table-hover table-nomargin table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.AuditItems[0].Time)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AuditItems[0].Description)
                            </th>
                            <th>Options</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td colspan="3">
                                No Items
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>