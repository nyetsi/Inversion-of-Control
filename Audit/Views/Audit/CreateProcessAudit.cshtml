@model Audit.Web.Models.ProcessAuditViewModel

@{
    ViewBag.Title = "CreateProcessAudit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="pull-left">
        <h1>Create Process Audit</h1>
    </div>
</div>

<div class="breadcrumbs">
    <ul>
        <li>
            <a href="@Url.Action("CreateProcessAudit", "Audit")">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#" class="current">Create Process Audit</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="box box-bordered">
            <div class="box-title">
                <h3>
                    <i class="fa fa-th-list"></i>Process Audit Details
                </h3>
            </div>
            <div class="box-content nopadding">

                @using (Html.BeginForm("CreateProcessAudit", "Audit", FormMethod.Post, new { @class = "form-horizontal form-bordered" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                    @Html.Partial("_Audit", Model)


                    <div class="form-group">
                        @Html.LabelFor(model => model.Cells, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="col-xs-6">
                                <div id="cboCells" class="form-control" style="width:475px;height:120px;overflow-y:scroll;">
                                    @Html.DisplayFor(model => model.Cells)
                                </div>
                                @Html.ValidationMessageFor(model => model.CellID)
                            </div>
                        </div>
                    </div>


                    <div class="form-actions  col-sm-12">
                        <button type="submit" class="btn pull-right btn-primary">Save Changes</button>
                        <a href="#" class="btn pull-right btn-default">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section validation {
    @Scripts.Render("~/bundles/jqueryval")
}